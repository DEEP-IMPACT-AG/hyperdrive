{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters": {
    "HostedZoneName": {
      "Type": "String"
    }
  },
  "Resources": {
    "HostedZone": {
      "Type": "AWS::Route53::HostedZone",
      "Properties": {
        "Name": {
          "Ref": "HostedZoneName"
        }
      }
    }
  },
  "Outputs": {
    "HostedZoneId": {
      "Value": {
        "Ref": "HostedZone"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-HostedZoneId"
        }
      }
    },
    "HostedZoneName": {
      "Value": {
        "Ref": "HostedZoneName"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-HostedZoneName"
        }
      }
    },
    "NameServers": {
      "Value": {
        "Fn::Join": [
          ",",
          {
            "Fn::GetAtt": [
              "HostedZone",
              "NameServers"
            ]
          }
        ]
      }
    }
  }
}
